<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nimtome.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".DndApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DndSpells">
        <activity
            android:name=".functions.character_management.ModifyCharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_modify_character"
            android:theme="@style/Theme.DndSpells.NoActionBar" />
        <activity
            android:name=".functions.home.CharacterListActivity"
            android:exported="true"
            android:label="@string/title_activity_character_list"
            android:theme="@style/Theme.DndSpells.NoActionBar"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".functions.presentation.SelectSpellsActivity"
            android:exported="false"
            android:label="@string/title_activity_select_spells"
            android:theme="@style/Theme.DndSpells.NoActionBar" />
        <activity
            android:name=".functions.presentation.CharacterDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_character_details"
            android:theme="@style/Theme.DndSpells.NoActionBar" />
        <activity
            android:name=".functions.presentation.SpellDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_spell_details"
            android:theme="@style/Theme.DndSpells.NoActionBar" />
        <activity
            android:name=".functions.character_management.CreateCharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_create_character"
            android:theme="@style/Theme.DndSpells.NoActionBar" />
    </application>

</manifest>